doctype html

html
  head

    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')

    link(href='/css/lib/bootstrap.min.css', rel='stylesheet')
    link(href='/css/font-awesome.min.css', rel='stylesheet')
    link(href='/css/lib/fonts.css', rel='stylesheet')
    link(href='/css/style.css', rel='stylesheet')

    block head

    title= title


  body

    // Begin navbar
    nav.navbar.navbar-default(role='navigation')

      .container-fluid

        // Brand and toggle get grouped for better mobile display
        .navbar-header

          a.navbar-brand(href='#')
            i.fa.fa-calendar.navbar-logo
            |  CrowdCalendar

          form.navbar-form.navbar-left.pull-left(role='search')
            .form-group.pull-left
              input#ccomnibar.form-control.pull-left(type='text', placeholder='Search')
            // <button type="submit" class="btn btn-default">Submit</button>
            // click the search bar to show all events

          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            i.fa.fa-caret-down

        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='#') Put advanced search here
    // End navbar

    block content

    // Begin footer
    footer.footer
      .container-fluid
        div(style='float:right;')
          p Contact Us
        div(style='float:left;')
          p Copyright CrowdCalendar 2015
    // End footer

  // Begin Scripts
  script(src='/js/lib/jquery-2.1.1.min.js')
  script(src='/js/lib/bootstrap.min.js')
  script(src='/js/ccomnibox.js')


  block scripts